#include <pwm_motor.h>
#include <lcd.c>

void main()
{
   
   int16 x_data, y_data, data;
   lcd_init();
   setup_adc(ADC_CLOCK_DIV_2);  // Focs/2 ayarlandı.
   setup_adc_ports(ALL_ANALOG); // Tüm 8 kanal analog input durmunda
   set_adc_channel(5);          // AN5 - RE0 - JOYSTICK Y EKSENİ AKTİF
   
   
   while(TRUE)
   {
      //setup_adc_ports(ALL_ANALOG);
      set_adc_channel(5);  // AN5 - RE0 - joystick y ekseni aktif
      data = read_adc();
      delay_ms(1);
      
      // sol üst ve sağ üst çapraz da 1023 değerini görmek için aşağıdaki kodlama yapıldı.
      if(data == 512 )
      {
         y_data = 0;
         setup_adc_ports(NO_ANALOGS);
         printf(lcd_putc,"\f  ( x  ,  y )  \n  %04Lu , %04Lu",x_data,y_data);
      }
      
      if(data >  512 ) y_data = (x_data-512)*2+1;
      if(data <  512 ) y_data = (511-y_data)*2+1;
      
      
   }

}
